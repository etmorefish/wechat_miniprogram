<view wx:for="{{booklist}}">
  <van-card
    title="{{ item.title }}"
    desc="{{item.abstract}}"
    thumb="{{ item.cover_url }}"
  >
  <view slot="tags">
    <view wx:for="{{ item.labels }}" wx:for-index="idx" wx:for-item="tag">
   <view wx:if="{{ idx < 2 }}"> <van-tag type="primary">{{ tag }}</van-tag> </view>
    </view>
  </view>
    <view slot="footer">
    <van-button  data-id="{{ item._id }}" size="small" type="primary"  plain bind:click="viewItem">查看详情</van-button>
  </view>
</van-card>
</view>

